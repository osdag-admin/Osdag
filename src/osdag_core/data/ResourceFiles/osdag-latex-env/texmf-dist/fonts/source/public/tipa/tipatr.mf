def bulb(suffix $,$$,$$$) =
 z$$$r=z$$r;
 numeric theta; theta=angle(0,y$r-y$$r);
 filldraw z$r{x$$r-x$r,0}...{0,y$$r-y$r}z$$r...{dir theta}z$$$l...
   {x$r-x$$r,0}z$l--cycle;
 enddef;

def bulbvar(suffix $,$$,$$$) =
 z$$$r=z$$r;
 numeric theta; theta=angle(x$r-x$$r,0);
 filldraw z$r{0,y$$r-y$r}...{x$$r-x$r,0}z$$r...{dir theta}z$$$l...
   {0,y$r-y$$r}z$l--cycle;
 enddef;

endinput
