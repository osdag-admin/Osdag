% (h) ft -> f-t

\if@noftligs  % suppress ft ligatures globally
    \nolig{ft}{f|t}
\else  % suppress ft ligatures selectively...
    \nolig{ieftain}{ief|tain}
    \nolig{alftime}{alf|time}
    \nolig{alftone}{alf|tone}
    \nolig{ooftop}{oof|top}
    \nolig{ooftree}{oof|tree}
